#!/bin/bash

OK="$(tput setaf 2)[OK]$(tput sgr0)"
ERROR="$(tput setaf 1)[ERROR]$(tput sgr0)"
NOTE="$(tput setaf 3)[NOTE]$(tput sgr0)"
WARN="$(tput setaf 5)[WARN]$(tput sgr0)"
CAT="$(tput setaf 6)[ACTION]$(tput sgr0)"
ORANGE=$(tput setaf 166)
YELLOW=$(tput setaf 3)
RESET=$(tput sgr0)

ags=(
  aylurs-gtk-shell-git
  wireplumber
  libgtop
  bluez
  bluez-utils
  networkmanager
  dart-sass
  wl-clipboard
  upower
  gvfs
  gtksourceview3
  libsoup3
  python
  python-gpustat
  brightnessctl
  pywal
  pacman-contrib
  power-profiles-daemon
  wf-recorder
  hyprpicker
  hyprsunset
  btop
)

# Installation of main components
printf "\n%s - Installing AGS \n" "${NOTE}"
for AGS in "${ags[@]}"; do
  install_package "$AGS" 2>&1 /dev/null
  if [ $? -ne 0 ]; then
     echo -e "\e[1A\e[K${ERROR} - $AGS Package installation failed, Please check the installation logs"
  fi
done
